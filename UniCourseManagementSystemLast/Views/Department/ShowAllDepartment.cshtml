@using UniversityCourseResultManagementSystemWebApp.Models

@*@model IEnumerable<Department>*@

@{
    List<Department> departments = ViewBag.Show;
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">Departments</h4>

                <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up"></i>
                    </a>
                </div>
               
                <div class="widget-toolbar">
                    <a href="/Department/insertdepartment" class="btn btn-success">
                        <i class="fa fa-plus-circle"></i> Add New
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Department Name</th>
                                <th>Department Code</th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in departments)
                            {
                               
                                <tr>
                                    <td>
                                        @item.DepartmentName
                                    </td>
                                    <td>
                                        @item.DepartmentCode
                                    </td>
                                   @* <td>
                                        <div class=" btn-group">
                                            <a class="btn btn-xs btn-success" href="/Department/details/@item.DepartmentId">
                                                <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                            </a>

                                            <a class="btn btn-xs btn-info" href="/Department/edit/@item.DepartmentId">
                                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                                            </a>

                                            <a class="btn btn-xs btn-danger" href="/Department/delete/@item.DepartmentId">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                            </a>
                                        </div>
                                    </td>*@
                              </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- /.span -->

</div>







